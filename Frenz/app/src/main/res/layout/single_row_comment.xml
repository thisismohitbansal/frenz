<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:elevation="8dp"
    app:cardUseCompatPadding="true"
    android:layout_height="wrap_content">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:padding="15dp">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/comment_single_row_user_image"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:background="#DC6161"
            android:layout_gravity="center"
            app:shapeAppearanceOverlay="@style/circular"
            app:strokeWidth="1dp"
            app:strokeColor="@color/white"
            android:src="@drawable/card_rectangle"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/comment_single_row_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UserName"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/comment_single_row_user_image"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/userMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is a message"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/comment_single_row_user_image"
            android:layout_below="@+id/comment_single_row_user_name"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/userTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date and Time"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/comment_single_row_user_image"
            android:layout_below="@+id/userMessage"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>